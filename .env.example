# Agent League System - Environment Configuration Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# =============================================================================
# League Manager Configuration
# =============================================================================

# League Manager Server
LEAGUE_MANAGER_HOST=localhost
LEAGUE_MANAGER_PORT=8000

# Database Configuration
# Options: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/league.db

# For PostgreSQL/MySQL (if DATABASE_TYPE != sqlite)
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=agent_league
# DATABASE_USER=league_admin
# DATABASE_PASSWORD=your_secure_password_here

# =============================================================================
# Referee Configuration
# =============================================================================

# Referee Server
REFEREE_HOST=localhost
REFEREE_PORT=8001

# Game Configuration
DEFAULT_GAME_TYPE=tic_tac_toe
GAME_TIMEOUT_SECONDS=30
MAX_MOVES_PER_GAME=100

# =============================================================================
# Player Configuration
# =============================================================================

# Player Strategy
# Options: random, smart, ai_powered
PLAYER_STRATEGY=smart

# AI-Powered Player Settings (if PLAYER_STRATEGY=ai_powered)
# ANTHROPIC_API_KEY=your_api_key_here
# AI_MODEL=claude-haiku-20250924
# AI_MAX_TOKENS=1000
# AI_TEMPERATURE=0.7

# =============================================================================
# Logging Configuration
# =============================================================================

# Log Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log Output
# Options: console, file, both
LOG_OUTPUT=console

# Log File Path (if LOG_OUTPUT=file or LOG_OUTPUT=both)
LOG_FILE_PATH=./logs/agent_league.log

# Log Format
# Options: simple, detailed, json
LOG_FORMAT=detailed

# =============================================================================
# Security Configuration
# =============================================================================

# Authentication Token Secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
AUTH_TOKEN_SECRET=your_secret_token_here_replace_with_actual_secret

# Token Expiration (in seconds)
AUTH_TOKEN_EXPIRATION=3600

# Enable/Disable Authentication
# Options: true, false
AUTH_ENABLED=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Max Concurrent Matches
MAX_CONCURRENT_MATCHES=10

# Request Timeout (seconds)
REQUEST_TIMEOUT=10

# Connection Pool Size
CONNECTION_POOL_SIZE=20

# =============================================================================
# Development/Testing Configuration
# =============================================================================

# Development Mode
# Options: true, false
DEV_MODE=false

# Enable Debug Endpoints
# Options: true, false (WARNING: Only enable in development!)
ENABLE_DEBUG_ENDPOINTS=false

# Mock External Services
# Options: true, false
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# Monitoring and Metrics
# =============================================================================

# Enable Metrics Collection
# Options: true, false
METRICS_ENABLED=true

# Metrics Export Port
METRICS_PORT=9090

# Metrics Export Format
# Options: prometheus, json
METRICS_FORMAT=prometheus

# =============================================================================
# Optional: Third-Party Integrations
# =============================================================================

# Slack Notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@agent-league.com

# =============================================================================
# Budget and Cost Controls (if using AI players)
# =============================================================================

# Monthly Token Budget
MONTHLY_TOKEN_BUDGET=1000000

# Cost Alert Threshold (USD)
COST_ALERT_THRESHOLD=25.00

# Emergency Shutoff Threshold (USD)
COST_EMERGENCY_THRESHOLD=100.00

# =============================================================================
# Notes
# =============================================================================
# - All settings have sensible defaults in config.yaml
# - Only override what you need to change
# - Sensitive values (API keys, secrets, passwords) MUST be in .env, not config.yaml
# - Verify .env is in .gitignore before committing
