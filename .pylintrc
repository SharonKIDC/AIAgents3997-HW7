[MASTER]
init-hook='import sys; sys.path.append(".")'
jobs=4

# Ignore directories (matches .gitignore)
ignore=CVS,
       .git,
       __pycache__,
       .venv,
       venv,
       env,
       ENV,
       build,
       dist,
       htmlcov,
       .pytest_cache,
       .ruff_cache,
       .mypy_cache,
       .tox,
       .eggs,
       *.egg-info,
       data,
       logs,
       .claude,
       docs/development

# Ignore patterns (regex)
ignore-patterns=^\..*,
                .*_cache.*,
                .*\.egg-info.*,
                ^build/,
                ^dist/,
                ^venv/,
                ^\.venv/,
                ^htmlcov/,
                ^data/,
                ^logs/,
                ^docs/development/

[MESSAGES CONTROL]
# No disables - all issues must be fixed
disable=

[REPORTS]
output-format=colorized
reports=no

[BASIC]
good-names=i,j,k,ex,e,_,id,db,op,fp,n,x,y,z,row,col
# Allow HTTP method names (do_GET, do_POST, etc.) for BaseHTTPRequestHandler
method-rgx=([a-z_][a-z0-9_]{2,30}|do_(GET|POST|PUT|DELETE|HEAD|OPTIONS))$

[FORMAT]
max-line-length=120
indent-string='    '

[DESIGN]
max-args=8
max-attributes=14
min-public-methods=1
max-locals=18
max-public-methods=30

[LOGGING]
logging-format-style=old
